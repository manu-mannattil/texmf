% NAME
%
%   baptiste.sty - Utopia + Roboto + Fourier-GUTenberg with some customizations
%
% DESCRIPTION
%
%   baptiste.sty is a package that provides the Utopia + Roboto
%   + Fourier-GUTenberg fonts with some customizations.  Caligraphic math fonts
%   are borrowed from Latin Modern (with appropriate scaling) and
%   Fourier-GUTenberg's calligraphic set is mapped to \mathscr.
%

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{baptiste}[2022/03/22 v0.1]

\RequirePackage[widespace]{fourier}

% Use Fourier's caligraphic math for \mathscr.
\DeclareMathAlphabet{\mathscr}{FMS}{futm}{m}{n}
\SetMathAlphabet{\mathscr}{bold}{FMS}{futm}{b}{n}

% Use Latin Modern calligraphic math for \mathcal after reducing
% glyph size to 92%.  Adapted from omslmsy.fd.
% See fntguide.pdf and https://tex.stackexchange.com/a/181240/132777
\DeclareFontFamily{OMS}{lmsy}{\skewchar\font48 }
\DeclareFontShape{OMS}{lmsy}{m}{n}{%
     <-5.5> s*[0.92] lmsy5     <5.5-6.5> s*[0.92] lmsy6
  <6.5-7.5> s*[0.92] lmsy7     <7.5-8.5> s*[0.92] lmsy8
  <8.5-9.5> s*[0.92] lmsy9     <9.5->    s*[0.92] lmsy10
}{}
\DeclareFontShape{OMS}{lmsy}{b}{n}{%
  <-6>  s*[0.92] lmbsy5
  <6-8> s*[0.92] lmbsy7
  <8->  s*[0.92] lmbsy10
}{}
\DeclareMathAlphabet{\mathcal}{OMS}{lmsy}{m}{n}
\SetMathAlphabet{\mathcal}{bold}{OMS}{lmsy}{b}{n}

% Use tgheros for \mathsf.
\def\qhv@scale{0.9} % see tgheros.sty
\DeclareMathAlphabet{\mathsf}{\encodingdefault}{qhv}{\mddefault}{n}
\SetMathAlphabet{\mathsf}{bold}{\encodingdefault}{qhv}{\bfdefault}{n}

% https://narkive.com/eANktZj3.5
\makeatletter
\def\big{\bBigg@{1}}
\def\Big{\bBigg@{1.5}}
\def\bigg{\bBigg@{2.4}}
\def\Bigg{\bBigg@{3.2}}
\makeatother

